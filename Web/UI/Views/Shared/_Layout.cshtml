<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">UAI</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if(Context.Items["User"] != null)
                    {
                      <li><a asp-area="" asp-controller="Category" asp-action="Index">Category</a></li>
                      <li><a>Hola, @Context.Items["User"]</a></li>
                      <li><a asp-area="" asp-controller="Home" asp-action="LogOut">Log out</a></li>
                    } else {
                      <li><a asp-area="" asp-controller="Home" asp-action="LogIn">Login</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <footer class="martop-4">
            <hr />
            <p class="text-center martop-1">&copy; 2017 - Universidad Abierta Interamericana</p>
        </footer>
    </div>
s
    @RenderSection("Scripts", required: false)
</body>
</html>
